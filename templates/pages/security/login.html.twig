{% extends 'base.html.twig' %}

{% block title %}Connexion -Symrecipe{% endblock %}

{% block body %}
    <div class="container">
        {% if error %}
            <div class="alert  alert-danger mt-4">
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            </div>

        {% endif %}
        <h1 class="mt-4">Formulaire de connexion</h1>
        <form action="{{ path('security.login') }}"  method="post">
            <div class="form-group">
                <label for="username" class="form-label mt-4">Email address</label>
                <input type="email" class="form-control" id="username" name="_username" placeholder="example@symrecipe.tg">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="password" class="form-label mt-4">Mot de passe</label>
                <input type="password" class="form-control" name = "_password" id="password" placeholder="Mot de passe">
            </div>

            <button type="submit" class="btn btn-primary mt-4">Se connecter</button>
        </form>
    </div>
{% endblock %}
